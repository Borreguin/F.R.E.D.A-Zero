  "MONGOCLIENT_SETTINGS": {"host":"localhost", "port": 2717, "tz_aware": true},
  "MONGO_LOG_LEVEL_OPTIONS": ["ON", "OFF"],
  "MONGO_LOG_LEVEL": "ON",
  "MONGOPATH_WINDOWS": "D:\\freda_db\\db",
  "MONGOEXE_WINDOWS":  "C:\\Program Files\\MongoDB\\Server\\3.6\\bin\\mongod.exe",
  "MONGOPATH_POSIX":   "~/freda_db/db",
  "MONGOEXE_POSIX":    "./bin/mongo",

  "DB_NAME" : "DB_FREDA",
  "DB_TIME_SERIES": "DB_TIME_SERIES",
  "CL_TAG_LIST": "CATL|TAGS",
  "CL_LAST_VALUES": "SUMM|LAST_VALUES",

  "SUPPORTED_FORMAT_DATES": ["%Y-%m-%d %H:%M:%S", "%Y-%m-%d %H:%M", "%Y-%m-%d", "%Y-%m-%d %H:%M:%S.%f"],
  "DEFAULT_DATE_FORMAT": "%Y-%m-%d %H:%M:%S"
}
